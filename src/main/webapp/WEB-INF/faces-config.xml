<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE faces-config PUBLIC "-//Sun Microsystems, Inc.//DTD JavaServer Faces Config 1.1//EN"
        "http://java.sun.com/dtd/web-facesconfig_1_1.dtd">
<faces-config>

    <application>
        <view-handler>com.sun.facelets.FaceletViewHandler</view-handler>
        <variable-resolver>
            de.mogwai.common.web.resolver.BeanInitingVariableResolver
        </variable-resolver>
        <navigation-handler>
            de.mogwai.common.web.navigation.NavigationHandler
        </navigation-handler>
        <action-listener>
            de.mogwai.common.web.actionlistener.ValidatingActionListener
        </action-listener>
        <locale-config>
            <default-locale>de</default-locale>
            <supported-locale>de</supported-locale>
        </locale-config>
    </application>

    <lifecycle>
        <phase-listener>de.powerstaff.web.backingbean.ContextPhaseListener</phase-listener>
    </lifecycle>

    <converter>
        <converter-id>contactConverter</converter-id>
        <converter-class>
            de.powerstaff.web.converter.ContactConverter
        </converter-class>
    </converter>

    <converter>
        <converter-id>historyTypeConverter</converter-id>
        <converter-class>
            de.powerstaff.web.converter.HistoryTypeConverter
        </converter-class>
    </converter>

    <converter>
        <converter-id>auditInformationConverter</converter-id>
        <converter-class>
            de.powerstaff.web.converter.AuditInformationConverter
        </converter-class>
    </converter>

    <converter>
        <converter-id>creationAuditInformationConverter</converter-id>
        <converter-class>
            de.powerstaff.web.converter.CreationAuditInformationConverter
        </converter-class>
    </converter>

    <converter>
        <converter-id>personConverter</converter-id>
        <converter-class>
            de.powerstaff.web.converter.PersonConverter
        </converter-class>
    </converter>

    <converter>
        <converter-id>textConverter</converter-id>
        <converter-class>
            de.powerstaff.web.converter.TextConverter
        </converter-class>
    </converter>

    <converter>
        <converter-id>dateConverter</converter-id>
        <converter-class>
            de.powerstaff.web.converter.DateConverter
        </converter-class>
    </converter>

    <navigation-rule>
        <from-view-id>*</from-view-id>
        <navigation-case>
            <from-outcome>FREELANCER_STAMMDATEN</from-outcome>
            <to-view-id>/include/freelancer/freelancermain.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>CUSTOMER_STAMMDATEN</from-outcome>
            <to-view-id>/include/customer/customermain.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>PARTNER_STAMMDATEN</from-outcome>
            <to-view-id>/include/partner/partnermain.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>PROJEKT_STAMMDATEN</from-outcome>
            <to-view-id>/include/project/projectmain.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>PROJEKT_SEARCHRESULT</from-outcome>
            <to-view-id>/include/project/projectsearchresult.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>PROFILE_STAMMDATEN</from-outcome>
            <to-view-id>/include/profile/profilemain.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>STATISTIK_STATISTIK</from-outcome>
            <to-view-id>/include/statistic/statisticmain.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>INDEX</from-outcome>
            <to-view-id>/include/freelancer/freelancermain.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/include/freelancer/*</from-view-id>
        <navigation-case>
            <from-outcome>STAMMDATEN</from-outcome>
            <to-view-id>
                /include/freelancer/freelancermain.xhtml
            </to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>HISTORIE</from-outcome>
            <to-view-id>
                /include/freelancer/freelancerhistory.xhtml
            </to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>SEARCHRESULT</from-outcome>
            <to-view-id>
                /include/freelancer/freelancersearchresult.xhtml
            </to-view-id>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/include/customer/*</from-view-id>
        <navigation-case>
            <from-outcome>STAMMDATEN</from-outcome>
            <to-view-id>
                /include/customer/customermain.xhtml
            </to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>HISTORIE</from-outcome>
            <to-view-id>
                /include/customer/customerhistory.xhtml
            </to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>SEARCHRESULT</from-outcome>
            <to-view-id>
                /include/customer/customersearchresult.xhtml
            </to-view-id>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/include/partner/*</from-view-id>
        <navigation-case>
            <from-outcome>STAMMDATEN</from-outcome>
            <to-view-id>
                /include/partner/partnermain.xhtml
            </to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>HISTORIE</from-outcome>
            <to-view-id>
                /include/partner/partnerhistory.xhtml
            </to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>SEARCHRESULT</from-outcome>
            <to-view-id>
                /include/partner/partnersearchresult.xhtml
            </to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>FREIBERUFLER</from-outcome>
            <to-view-id>
                /include/partner/partnerfreelancer.xhtml
            </to-view-id>
        </navigation-case>
    </navigation-rule>
</faces-config>

