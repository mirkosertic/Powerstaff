<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="de.powerstaff.business.entity" default-lazy="false">
  <class name="Partner" table="partner">

		<id name="id" column="id">
	        <generator class="identity"/>
		</id>
	
		<property column="creationDate" name="creationDate"/>
		<property column="creationUser" name="creationUserID"/>
		<property column="changedDate" name="lastModificationDate"/>
		<property column="changedUser" name="lastModificationUserID"/>
		
		<property name="name1"/>
		<property name="name2" />
		<property name="company"/>
		<property name="street"/>
		<property name="country"/>
		<property name="plz"/>
		<property name="city"/>
		<property name="comments" type="org.springframework.orm.hibernate3.support.ClobStringType"/>
		
		<property name="debitorNr"/>
		<property name="kreditorNr"/>
		
		<property name="titel"/>
		<property name="nationalitaet"/>
		<property name="geburtsdatum"/>		

		<set name="contacts" cascade="all-delete-orphan" order-by="value">
			<key column="partner_id"/>
			<one-to-many class="PartnerContact"/>
		</set>

		<set name="history" cascade="all-delete-orphan" order-by="creationDate DESC">
			<key column="partner_id"/>
			<one-to-many class="PartnerHistory"/>
		</set>
  
		<set name="freelancer" cascade="none">
			<key column="partner_id"/>
			<one-to-many class="Freelancer"/>
		</set>
		
		<map name="udf" table="partner_udf" cascade="all-delete-orphan">
			<key column="partner_id" foreign-key="partner_udf_fk1"/>
			<map-key type="string" length="255" column="name"/>
			<composite-element class="UserDefinedField">
				<property name="booleanValue" column="booleanvalue"/>
				<property name="dateValue" column="datevalue"/>
				<property name="intValue" column="intvalue"/>
				<property name="longValue" column="longvalue"/>
				<property name="stringValue" column="stringValue" length="255"/>
				<property name="longStringValue" type="org.springframework.orm.hibernate3.support.ClobStringType"/>
			</composite-element>
		</map>
  
  </class>
</hibernate-mapping>